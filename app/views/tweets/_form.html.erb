<%= form_with model: tweet do |form| %>
    
    <div>
      <%= form.label :isim %><br>
      <%= form.text_field :title %>
      <% tweet.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :tweet %><br>
      <%= form.text_area :body %><br>
      <% tweet.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  




  